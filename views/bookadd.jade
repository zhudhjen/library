extends layout

block header
    link(rel="stylesheet", href="/stylesheets/form.css")
    script(src="/javascripts/bookadd.js")

block content
    h5 Add a New Book
    form.row#book-add(name="book-add", action="/book", method="post")
        div.row
            div.six.columns
                label(for="book-id") Book ID
                input.u-full-width#book-id(type="text", name="id", placeholder="required", required, autofocus)
            div.six.columns
                label(for="book-category") Category
                input.u-full-width#book-category(type="text", name="category", placeholder="required", required)
        div.row
            div.six.columns
                label(for="book-title") Title
                input.u-full-width#book-title(type="text", name="title", placeholder="required", required)
            div.six.columns
                label(for="book-press") Press
                input.u-full-width#book-press(type="text", name="press", placeholder="required", required)
        div.row
            div.six.columns
                label(for="book-year") Year
                input.u-full-width#book-year(type="number", name="year", placeholder="required", required)
            div.six.columns
                label(for="book-author") Author
                input.u-full-width#book-author(type="text", name="author", placeholder="required", required)
        div.row
            div.six.columns
                label(for="book-price") Price
                input.u-full-width#book-price(type="number", name="price", placeholder="required", required)
            div.six.columns
                label(for="book-total-quantity") Total Quantity
                input.u-full-width#book-total-quantity(type="number", name="total_quantity", placeholder="required", required)
        div.row.actions
            div.four.columns
                input.u-full-width.button-primary(type="submit", value="submit")
            div.four.columns
                input.u-full-width(type="reset", value="reset")
    h5 Add New Books via File
    form(name="upload", action="/upload", enctype="multipart/form-data", method="post")
        div.row
            div.six.columns
                input.u-full-width(name="sql", type="file")
            div.two.columns
                input.u-full-width.button-primary(type="submit", value="submit")
